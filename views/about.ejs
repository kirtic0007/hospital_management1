  <title>About Us - LifeCare Hospital</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: url('/images/about-bg.jpg') no-repeat center center/cover;
      color: #fff;
    }

    .navbar {
      background-color: rgba(0, 0, 0, 0.7);
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar a {
      color: #fff;
      margin-left: 15px;
      text-decoration: none;
      font-weight: 500;
    }

    .about-container {
      padding: 60px 30px;
      background-color: rgba(0, 0, 0, 0.6);
      margin: 50px auto;
      border-radius: 15px;
      max-width: 1000px;
    }

    h1, h2 {
      text-align: center;
      color: #041111;
      margin-bottom: 20px;
    }

    p {
      font-size: 1.1em;
      line-height: 1.7;
      margin-bottom: 20px;
    }

    .section {
      margin-top: 40px;
    }

    .team-member {
      background: rgba(255, 255, 255, 0.1);
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .team-member h3 {
      color: #081211;
      margin-bottom: 5px;
    }

    .btn-back {
      display: block;
      width: fit-content;
      margin: 30px auto 0;
      padding: 10px 20px;
      background: #111212;
      color: white;
      border: none;
      border-radius: 25px;
      text-decoration: none;
      font-size: 1em;
    }

    .btn-back:hover {
      background: #171c1b;
    }

    .testimonial {
      font-style: italic;
      color: #f0f0f0;
      border-left: 4px solid #0f1010;
      padding-left: 15px;
      margin-bottom: 20px;
    }
