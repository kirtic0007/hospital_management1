    .card {
      background: #f8f9fa;
      border-radius: 10px;
      padding: 20px;
      width: 300px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    footer {
      background-color: #10171a;
      color: white;
      padding: 20px;
      text-align: center;
    }

    .btn {
      background-color: #171c22;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      margin-top: 20px;
      text-decoration: none;
      display: inline-block;
    }

    .btn:hover {
      background-color: #142429;
    }
  </style>
</head>
